//by Ben Clark
//This code didn't work to test the XBees through SPI
//It is supposed to transfer just one character: 'c'

#include <SPI.h>
//note: SPI clock rates up to 3.5MHz are possible on the Xbee 900HP
byte c = 'c';
void setup() {
  
  int SS = 10;
  pinMode(SS, OUTPUT);
  digitalWrite(SS, HIGH);
  SPI.begin();
}

void loop() {
  SPI.beginTransaction(SPISettings(5000000, MSBFIRST, SPI_MODE0));
  digitalWrite(SS, LOW);
  SPI.transfer(c);
  digitalWrite(SS, HIGH);
  SPI.endTransaction();
  delay(1000);
}
